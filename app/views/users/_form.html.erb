<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <dl>
      <dd><label for="" class="form-label">Name:</label><%= f.text_field :name, :class => "form-textfield mid" %></dd>
      <dd><label for="" class="form-label">Email:</label><%= f.text_field :email, :class => "form-textfield mid" %></dd>
      <dd><label for="" class="form-label">Password:</label><%= f.password_field :password, :class => "form-textfield mid" %></dd>
    </dl>
  <div class="actions">
    <%= f.submit "Submit", :disable_with => 'Submiting...' %>
    <!-- <a href="#" class="awesome orange-red large" id="sign-up-button">SIGN UP &raquo;</a> -->
  </div>
<% end %>
