<% form_for UserSession.new do |f| -%>
<ul id="login">
  <li style="margin-top: 15px;">
    <label for="" class="form-label inlined">Email</label>
    <%= f.text_field :email, :class => "form-textfield gray mi-short" %>
  </li>
  <li style="margin-top: 15px;">
    <label for="" class="form-label inlined">Password</label>
    <%= f.password_field :password, :class => "form-textfield gray mi-short" %>
  </li>
  <li style="padding-top: 5px"><button class="simple-button gray">Sign In</button></li>
</ul>
<% end -%>