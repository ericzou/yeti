<% body_id "new" %>
<% body_class "password_resets" %>

<% content_for :content do %>
  <h1>Reset Password</h1>

  <p>Please enter your email address below and then press "Reset Password".</p>

  <% form_tag password_resets_path do %>
    <%= text_field_tag :email, "", :class => "form-textfield mid minimal-matching-height"  %>
    <%= submit_tag "Reset Password", :class => "simple-button gray" %>
  <% end %>
<% end %>